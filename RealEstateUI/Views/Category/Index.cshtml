@model List<ResultCategoryDto>
@{
    ViewBag.Title = "title";
    Layout = "/Views/Admin/Index.cshtml";
}

<!-- Table Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Responsive Table</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Kategory Adı</th>
                            <th scope="col">Kategory Durumu</th>
                            <th scope="col">İşlemler</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.CategoryId</th>
                                <td>@item.CategoryName</td>
                                <td>  @if (item.CategoryStatus)
                                    {
                                        <span class="badge bg-success p-2">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger p-2">Pasif</span>
                                    }
                                    </td>
                                <td>
                                    <a href="#" class="btn btn-outline-primary">Düzenle</a>
                                    <a href="#" class="btn btn-outline-danger">Sil</a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
