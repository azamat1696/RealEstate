@model CreateEmployeeDto
@{
    ViewBag.Title = "title";
    Layout = "/Views/Admin/Index.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni Personel Ekleme</h6>
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Personel Adı</label>
                        <input type="text" class="form-control"  asp-for="Name">
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Personel Ünvanı</label>
                        <input type="text" class="form-control"   asp-for="Title">
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Personel Mail Adresi</label>
                        <input type="email" class="form-control" asp-for="Mail">
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Personel Telefon</label>
                        <input type="tel" class="form-control"  asp-for="PhoneNumber">
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Personel Fotoğraf</label>
                        <input type="text" class="form-control"  asp-for="ImageUrl">
                    </div>
                    <button class="btn btn-primary" type="submit">Personel Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>